@model WEB.Areas.Admin.Models.PostVM
@{
    ViewData["Title"] = "Create Post";
}
<h2>Create Post</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Slug"></label>
        <input asp-for="Slug" class="form-control" />
        <small class="text-muted">Boş bırakırsan otomatik üretilecek.</small>
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
            <option value="">-- kategori seç --</option>  <!-- boş option -->
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Tags</label>
        <select asp-for="SelectedTagIds" asp-items="Model.Tags" multiple class="form-select"></select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
