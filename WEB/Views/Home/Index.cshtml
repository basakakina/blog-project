@{
    ViewData["Title"] = "Home";
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
}

<div class="text-center my-5">
    <h1>Hoşgeldiniz!</h1>
    

    @if (!isAuth)
    {
        <div class="d-flex gap-3 justify-content-center mt-4">
            <a class="btn btn-outline-primary"
               asp-area="" asp-controller="Account" asp-action="Login"
               asp-route-returnUrl="@Context.Request.Path">Giriş Yap</a>

            <a class="btn btn-primary"
               asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>

            <a class="btn btn-outline-primary"
               asp-area="" asp-controller="Post" asp-action="Index">Yayınlanan Yazılar</a>
        </div>
    }
    else
    {
        <div class="d-flex gap-3 justify-content-center mt-4">
            
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary"
                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
            }
            <a class="btn btn-outline-primary"
               asp-area="" asp-controller="Post" asp-action="Index">Yayınlanan Yazılar</a>
        </div>
    }
</div>
